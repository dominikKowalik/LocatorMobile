<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_collapseParallaxMultiplier="0.8"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Powiedz innym co u Ciebie!"
        android:ems="10"
        android:id="@+id/editText"
        android:textSize="24sp"
        android:layout_weight="0.03"
        android:layout_marginTop="200dp"/>


    <android.support.design.widget.FloatingActionButton android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content" android:src="@drawable/ic_send_white_24dp" android:layout_gravity="center_horizontal">
    </android.support.design.widget.FloatingActionButton>
</LinearLayout>